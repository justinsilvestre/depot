<% if line_item == @current_item %>
	<tr id="current_item">
<% else %>
	<tr>
	<% end %>
	<td><%= line_item.quantity %>&times;</td>
	<td><%= line_item.product.title %></td> 
	<td><%= button_to 'remove', line_item_path(line_item), method: :delete, remote: true, data: { confirm: 'Are you sure you want to remove this item from your cart?' } %></td>
	<td class="item_price"><%= number_to_currency(line_item.total_price) %></td>
</tr>